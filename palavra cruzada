#include <stdio.h>
#include <cstring>
using namespace std;

void alocar(char matriz[50][50], struct{char palavra[50]; char dica[1000]; int numero; int posi;}j[50],int n){
int k=0,p=1,u,c,l;
while(k<n){
    u=0;
    c=0;
    l=0;
    while(j[k].palavra[l]!=' '){
        l++;
    }
    while(u<l){
        if(p==1){
            matriz[0][u]=j[k].palavra[u];
            u++;
        }
        if(p==2){
            matriz[u][0]=j[k].palavra[u];
            u++;
        }
    }
    p++;
    if(p==3){
        p=1;
    }
}

