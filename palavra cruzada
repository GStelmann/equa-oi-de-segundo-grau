}jogada[50];

void impressora(char mat[50][50]){
    int i=0,j=0;
    for(i=0; i<50; i++){ //imprime a matriz
        for(j=0; j<50; j++){
            printf("%2c", mat[i][j]);
        }
            printf("\n");
        }
}

int main(){//Guilherme França Stelmann 13678571
    int k=0,q=0,n,y=0;
    char matriz[50][50];
    while(k<50){
        matriz[k][q]='_';
        q++;
        if(q==50){
            q=0;
            k++;
        }
    }
    impressora(matriz);
    printf("quantas palavras voce quer jogar?");
    scanf("%d", &n);
    while(y<n){
      printf("insira a palavra");
        scanf("%c", &jogada[y].palavra);
      printf("insira a dica");
        scanf("%c", &jogada[y].dica);
        jogada[y].numero=y+1;
        y++;
    }
  
}
