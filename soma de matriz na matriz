#include <iostream>
#include <time.h>
#include <stdlib.h>
using namespace std;

int main()
{
    cout<<"jorge, faça a matriz"<<endl;
    float jorge[4][4];//jorge é a matriz, gostei do nnome, reflete a sua personalidade
    int c=0,l=0,lf=0;//variaveis para auxiliar jorge
    srand(time(NULL));//para o processo ser aleatório
    while (c<3){//povoando a matriz com elementos aleatórios
        jorge[l][c] = rand()%100000;
        l=l+1;
        if(l==4){
            l=0;
            c=c+1;
        }}
        while(lf<=3){// fazendo a ultima coluna
            jorge[lf][3]=jorge[lf][0]+jorge[lf][2]+jorge[lf][1];
        lf=lf+1;
    }
    cout<<" "<<jorge[0][0]<<" "<<jorge[0][1]<<" "<<jorge[0][2]<<" "<<jorge[0][3]<<endl;//imprimindo a matriz
    cout<<" "<<jorge[1][0]<<" "<<jorge[1][1]<<" "<<jorge[1][2]<<" "<<jorge[1][3]<<endl;
    cout<<" "<<jorge[2][0]<<" "<<jorge[2][1]<<" "<<jorge[2][2]<<" "<<jorge[2][3]<<endl;
    cout<<" "<<jorge[3][0]<<" "<<jorge[3][1]<<" "<<jorge[3][2]<<" "<<jorge[3][3]<<endl;

}
