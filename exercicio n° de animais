#include<iostream>
#include<cmath>
using namespace std;

    int main(){
    int patas,animais,patos,coelhos,x;
    cout<<"quantas patas existem no rancho?"<<endl;
    cin>>patas;
    cout<<"quantos animais existem no rancho?"<<endl;
    cin>>animais;
    x=animais*2;
    coelhos=(patas-x)/2;
    patos=animais-coelhos;
    cout<<"existem "<<patos<<" patos e "<<coelhos<<" coelhos"<<endl;


}

