#include <iostream>

using namespace std;

int main(){
int c1,c2,v=0,pl=0,pc=0,j=0,ct=0,cl=0,validade;
char tabuleiro [3][3],jogada;
while(pc<3){
    tabuleiro[pl][pc]='_';
    if(pl!=2){
        pl=pl+1;
    }else{
    pl=0;
    pc=pc+1;
    }
}
cout<<"      c1  c2  c3"<<endl;
cout<<"  l1  "<<tabuleiro [0][0]<<" | "<<tabuleiro [0][1]<<" | "<<tabuleiro[0][2]<<endl;
cout<<"     ----------"<<endl;
cout<<"  l2  "<<tabuleiro [1][0]<<" | "<<tabuleiro [1][1]<<" | "<<tabuleiro[1][2]<<endl;
cout<<"     ----------"<<endl;
cout<<"  l3  "<<tabuleiro [2][0]<<" | "<<tabuleiro [2][1]<<" | "<<tabuleiro[2][2]<<endl;
while(v==0 && j<9){
cin>>c1>>c2;
validade=1;
if(tabuleiro[c1-1][c2-1]='_'){
   validade=0;
    cout<<"jogada não válida, jogue novamente";
    ;
}

if(j%2==0 && validade==1){
        tabuleiro[c1-1][c2-1]='x';
        j=j+1;
}
if(j%2==1&&validade==1){
      tabuleiro[c1-1][c2-1]='o';
      j=j+1;
}
ct=0;
cl=0;
if((tabuleiro[0][0]==tabuleiro[1][1]&&tabuleiro[1][1]==tabuleiro[2][2])||(tabuleiro[0][2]==tabuleiro[1][1]&&tabuleiro[1][1]==tabuleiro[2][0])){
    if(tabuleiro[1][1]=='x'){
     v=1;
    }
    else{
            v=2;
    }
}
while(ct<3){
if(tabuleiro[0][ct]==tabuleiro[1][ct]&&tabuleiro[1][ct]==tabuleiro[2][ct]){
  if(tabuleiro[1][ct]=='x'){
     v=1;
    }
    else{
            v=2;
    }
}
ct=ct+1;
}
while(cl<3){
if(tabuleiro[cl][0]==tabuleiro[cl][1]&&tabuleiro[cl][1]==tabuleiro[cl][2]){
  if(tabuleiro[cl][1]=='x'){
     v=1;
    }
    else{
            v=2;
    }
}
cl=cl+1;
}
}


cout<<"      c1  c2  c3"<<endl;
cout<<"  l1  "<<tabuleiro [0][0]<<" | "<<tabuleiro [0][1]<<" | "<<tabuleiro[0][2]<<endl;
cout<<"     ----------"<<endl;
cout<<"  l2  "<<tabuleiro [1][0]<<" | "<<tabuleiro [1][1]<<" | "<<tabuleiro[1][2]<<endl;
cout<<"     ----------"<<endl;
cout<<"  l3  "<<tabuleiro [2][0]<<" | "<<tabuleiro [2][1]<<" | "<<tabuleiro[2][2]<<endl;


if(v==1){
    cout<<"parabéns jogador com x, voce venceu!!!!!!!"<<endl;
    return 0;
}else if(v==2){
cout<<"parabéns jogador com o, voce venceu!!!!!!!"<<endl;
return 0;
}
else{
    cout<<"deu velha"<<endl;
    return 0;
}

}
